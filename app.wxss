/**app.wxss**/
page{
  height: 100%;
}
.container {
  height: 100%;
  /* display: flex; */
  flex-direction: column;
  /* align-items: center; 
  justify-content: space-between; */
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
} 
.v-container{
  display: flex;
  height: calc(100% - 98rpx - env(safe-area-inset-bottom));
  /* height: calc(100vh - 98rpx); */
  /* padding-bottom: 98rpx; */
  /* padding-bottom: calc(98rpx + constant(safe-area-inset-bottom)); */
  overflow: hidden;
}
form{
  box-sizing: border-box;
}
button:not([size='mini']){
  padding: 0;
  font-size: 34rpx;
}
button:not([size='mini']).submit-btn{
  display: block;
  height: 83.33333rpx;
  line-height: 83.33333rpx;
  background: #3769ff;
  border-radius: 50rpx;
  font-weight: normal;
  letter-spacing: 2rpx;
  color: #fff;
  font-size: 34rpx;
}
.loading{
  width: 36rpx;
  height: 36rpx;
  margin-left: 12rpx;
}
