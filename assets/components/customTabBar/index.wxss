.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 98rpx;
  background: white;
  display: flex;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-border {
  background-color: #f0f0f0;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 3rpx;
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  padding: 16.90821rpx;
}

.tab-bar-item .coverIcon {
  width: 35rpx;
  height: 38rpx;
  line-height: 38rpx;
  margin-bottom: 10rpx;
}

.tab-bar-item .coverText {
  line-height: 24rpx;
  height: 24rpx;
  font-size: 20rpx;
}
